{
  "name": "Repeat Until Example",
  "description": "Demonstrates loop functionality with repeat_until",
  "entry_block": "block_1",
  "blocks": [
    {
      "id": "block_1",
      "type": "open_page",
      "url": "https://the-internet.herokuapp.com/dynamic_loading/2",
      "next_block": "block_2"
    },
    {
      "id": "block_2",
      "type": "click_element",
      "selector": "#start button",
      "selector_type": "css",
      "description": "Start dynamic loading",
      "next_block": "block_3"
    },
    {
      "id": "block_3",
      "type": "repeat_until",
      "condition": "element_visible",
      "selector": "#finish",
      "selector_type": "css",
      "loop_block": "block_4",
      "max_iterations": 20,
      "description": "Wait for finish message to appear",
      "next_block": "block_5"
    },
    {
      "id": "block_4",
      "type": "wait_until_visible",
      "selector": "body",
      "selector_type": "css",
      "timeout_seconds": 1,
      "description": "Small delay between checks",
      "next_block": null
    },
    {
      "id": "block_5",
      "type": "assert_visible",
      "selector": "#finish",
      "selector_type": "css",
      "description": "Verify finish message is visible",
      "next_block": null
    }
  ]
}
