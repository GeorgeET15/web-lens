{
  "name": "Simple Login Test",
  "description": "Test login functionality with username and password",
  "entry_block": "block_1",
  "blocks": [
    {
      "id": "block_1",
      "type": "open_page",
      "url": "https://the-internet.herokuapp.com/login",
      "next_block": "block_2"
    },
    {
      "id": "block_2",
      "type": "enter_text",
      "selector": "#username",
      "selector_type": "css",
      "text": "tomsmith",
      "clear_first": true,
      "description": "Enter username",
      "next_block": "block_3"
    },
    {
      "id": "block_3",
      "type": "enter_text",
      "selector": "#password",
      "selector_type": "css",
      "text": "SuperSecretPassword!",
      "clear_first": true,
      "description": "Enter password",
      "next_block": "block_4"
    },
    {
      "id": "block_4",
      "type": "click_element",
      "selector": "button[type='submit']",
      "selector_type": "css",
      "description": "Click login button",
      "next_block": "block_5"
    },
    {
      "id": "block_5",
      "type": "wait_until_visible",
      "selector": ".flash.success",
      "selector_type": "css",
      "timeout_seconds": 5,
      "description": "Wait for success message",
      "next_block": "block_6"
    },
    {
      "id": "block_6",
      "type": "assert_visible",
      "selector": ".flash.success",
      "selector_type": "css",
      "description": "Verify success message is visible",
      "next_block": null
    }
  ]
}
